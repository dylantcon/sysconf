# ~/.gitconfig - Git configuration
# Managed by sysconf
# Note: Update [user] section with your details

[user]
	name = dylantcon
	email = dylan.t.con@gmail.com
    # TODO: Set your name and email
    # name = Your Name
    # email = your.email@example.com

[init]
    defaultBranch = main

[core]
    editor = vim
    autocrlf = input
    pager = less -FRX

[color]
    ui = auto

[alias]
    st = status
    co = checkout
    br = branch
    ci = commit
    lg = log --oneline --graph --decorate
    last = log -1 HEAD --stat
    unstage = reset HEAD --
    amend = commit --amend --no-edit
    branches = branch -a
    remotes = remote -v
    stashes = stash list
    precommit = diff --cached --diff-algorithm=minimal -w
    uncommit = reset --soft HEAD~1

[pull]
    rebase = false

[push]
    default = current
    autoSetupRemote = true

[fetch]
    prune = true

[diff]
    algorithm = histogram

[merge]
    conflictstyle = diff3

[rerere]
    enabled = true

[credential]
    helper = cache --timeout=3600
