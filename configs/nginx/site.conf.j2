# Nginx site configuration template
# Generated by sysconf webpages
#
# Variables:
#   domain, server_names, upstream_name, upstream, locations
#   ssl_available, ssl_cert_domain, static, static_cache, proxy_ssl

{% if upstream and upstream.port %}
upstream {{ upstream_name }} {
    server 127.0.0.1:{{ upstream.port }};
{% if upstream.keepalive %}
    keepalive {{ upstream.keepalive }};
{% endif %}
}
{% endif %}

server {
    listen 80;
    listen [::]:80;
    server_name {{ server_names }};
{% if ssl_available and not proxy_ssl %}

    # Redirect HTTP to HTTPS
    return 301 https://$server_name$request_uri;
}

server {
    listen 443 ssl;
    listen [::]:443 ssl;
    http2 on;
    server_name {{ server_names }};

    # SSL certificates (managed by certbot)
    ssl_certificate /etc/letsencrypt/live/{{ ssl_cert_domain | default(domain) }}/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/{{ ssl_cert_domain | default(domain) }}/privkey.pem;
    include /etc/letsencrypt/options-ssl-nginx.conf;
    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem;

    # Security headers
    add_header X-Frame-Options "SAMEORIGIN" always;
    add_header X-Content-Type-Options "nosniff" always;
{% elif proxy_ssl %}

    # SSL terminated by upstream proxy (e.g., Cloudflare Tunnel)
    # Security headers
    add_header X-Frame-Options "SAMEORIGIN" always;
    add_header X-Content-Type-Options "nosniff" always;

    # Trust proxy headers
    real_ip_header X-Forwarded-For;
    set_real_ip_from 0.0.0.0/0;
{% endif %}

    # Logging
    access_log /var/log/nginx/{{ domain }}.access.log;
    error_log /var/log/nginx/{{ domain }}.error.log;

{% if static %}
    # Static site
    root {{ webpage_path }};
    index index.html;

{% if static_cache %}
{% for cache_rule in static_cache %}
    location ~* \.({{ cache_rule.extensions | join('|') }})$ {
        expires {{ cache_rule.days }}d;
        add_header Cache-Control "public, immutable";
    }
{% endfor %}
{% endif %}

    location / {
        try_files $uri $uri/ =404;
    }
{% else %}
{% for loc in locations %}
    location {{ loc.path }} {
{% if loc.proxy or loc.proxy_port %}
        proxy_pass http://{% if loc.proxy and upstream_name %}{{ upstream_name }}{% else %}127.0.0.1:{{ loc.proxy_port | default(8080) }}{% endif %};
        proxy_http_version 1.1;
        proxy_set_header Host $host;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
{% if upstream and upstream.keepalive %}
        proxy_set_header Connection "";
{% endif %}
{% elif loc.alias %}
        alias {{ loc.alias }};
{% if loc.cache_days %}
        expires {{ loc.cache_days }}d;
        add_header Cache-Control "public, immutable";
{% endif %}
{% elif loc.root %}
        root {{ loc.root }};
{% if loc.cache_days %}
        expires {{ loc.cache_days }}d;
        add_header Cache-Control "public, immutable";
{% endif %}
{% endif %}
    }

{% endfor %}
{% endif %}
}
